{
  "manifest_version": 3,
  "name": "Xrypt",
  "version": "1.4",
  "description": "Encrypt and decrypt text on the page using a username as the key.",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["crypto-js.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["keys.html", "openpgp.min.js", "keys.js", "show_key.html", "show_key.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
